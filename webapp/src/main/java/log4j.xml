<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd" >
<log4j:configuration>
	<!-- APPENDERS LIST -->
	<!-- show log entries on console -->
	<appender name="CON" class="org.apache.log4j.ConsoleAppender">
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{ABSOLUTE} %p %c - %m%n" />
		</layout>
	</appender>


	<logger name="net.micwin.elysium">
		<level value="INFO" />
	</logger>

	<logger name="net.micwin.elysium.jobs.NPCAdvancer">
		<level value="DEBUG" />
	</logger>

	<root>
		<priority value="WARN" />
		<appender-ref ref="CON" />
	</root>
</log4j:configuration>
